enum UserLevel {
    ADMIN
    USER
}

type User {
    id: ID! @unique
    userName: String
    firstName: String
    lastName: String
    email: String! @unique
    password: String!
    cart: [CartItem!]!
    resetToken: String
    resetTokenExpiry: Float
    userLevel: UserLevel
}

type Item {
    id: ID! @unique
    title: String!
    description: String!
    image: String!
    price: Int!
    user: User!
}

type CartItem {
    id: ID! @unique
    quantity: Int! @default(value: 1)
    item: Item!
    user: User!
}
