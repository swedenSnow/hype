type User {
    id: ID! @unique
    firstName: String
    lastName: String
    email: String! @unique
    password: String!
    cart: [CartItem!]!
}

type Item {
    id: ID! @unique
    title: String!
    description: String!
    image: String!
    price: Int!
    user: User!
}

type CartItem {
    id: ID! @unique
    quantity: Int! @default(value: 1)
    item: Item!
    user: User!
}
